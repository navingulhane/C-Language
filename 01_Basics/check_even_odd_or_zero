  //Check if the number is Even,Odd or zero.
    
    #include<stdio.h>
    int main ( ){
   
    int num ;
    printf("Enter a number :");
    scanf("%d",&num);
     
     if (num>0){
         printf("%d is a positive number\n");
     }
    else if (num<0){
        printf("%d is a negative number\n");
    }
    else  {
    printf("The number is zero");
    }
    return 0;
    }
